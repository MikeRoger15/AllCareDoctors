@{
    ViewData["Title"] = "AllCare Doctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HomeStyle {
    <link rel="stylesheet" href="~/css/homepage.css" />
}

<main class="content-wrapper">
    <!-- Hero Section -->
    <section class="hero-section text-center">
        <div class="container">
            <div class="bigimage">
                <img src="~/images/primary-care-top.png" alt="Health Promotion" />
            </div>
            <div class="content">
                <h1>RAISING HEALTH FOR <span>MORE NEW YORKERS</span> THAN ANYONE</h1>
                <p>
                    With more experts, deeper insights, and newer breakthroughs, we’re solving the greatest challenges in health care.
                </p>
            </div>
        </div>
    </section>

    <!-- Doctor Profiles Section -->
    <section class="doctor-profiles">
        <div class="container container-lower">
            <div class="text-box">
                <img src="~/images/dr.sam.jpg" alt="Dr. Samantha Rodriguez" class="image" />
                <p>Dr. Samantha Rodriguez <br />Cardiology</p>
            </div>
            <div class="text-box">
                <img src="~/images/dr.ali.jpg" alt="Dr. Ali Ahmed" class="image" />
                <p>Dr. Ali Ahmed <br />Neurology</p>
            </div>
            <div class="text-box">
                <img src="~/images/dr.mario.jpg" alt="Dr. Mario Russo" class="image" />
                <p>Dr. Mario Russo <br />Internal Medicine</p>
            </div>
            <div class="text-box">
                <img src="~/images/dr.sanjita.jpg" alt="Dr. Sanjita Patel" class="image" />
                <p>Dr. Sanjita Patel <br />Gynecology</p>
            </div>
        </div>
    </section>
</main>