<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AllCareDoctors</title>
    <script type="importmap"></script>

    <link rel="stylesheet" href="~/css/styles.css" />
    @RenderSection("HomeStyle", required: false)
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AllCareDoctors.styles.css" asp-append-version="true"/>
</head>
<body>


<!-- HEADER SECTION-->

<header>
    
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <img class="header-logo" src="Titlelogo.png" alt="Error"/>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AllCareDoctors</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Schedule-Appointments" asp-action="">Schedule Appointments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Providers" asp-action="">Providers</a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Why" asp-action="">Why AllCare Doctors</a>
                    </li>
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>




<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer>
    <div class="footer-sections">
        <div class="footer-section">
            <h3>About Us</h3>
            <p>We provide the best healthcare solutions for your family. Trusted by thousands of providers.</p>
        </div>
        <div class="footer-section">
            <h3>Contact Us</h3>
            <ul>
                <li>Email: support@allcaredoctors.com</li>
                <li>Phone: +1-800-555-1234</li>
                <li>Address: 123 Health St, City, Country</li>
            </ul>
        </div>
        <div class="footer-section">
            <h3>FAQ</h3>
            <ul>
                <li><a href="#faq1">How to book an appointment?</a></li>
                <li><a href="#faq2">Insurance accepted?</a></li>
                <li><a href="#faq3">Refund policy?</a></li>
            </ul>
        </div>
        
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>