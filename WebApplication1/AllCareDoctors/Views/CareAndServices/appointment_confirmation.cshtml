@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Confirmation</title>
    <link rel="stylesheet" href="~/css/appointment_confirmation.css">
</head>
<body>
<div class="container">
    <img src="~/images/calendar_icon.jpeg" alt="calendar icon">
    <h2>Appointment Reminder</h2>
    <p>Please confirm your upcoming appointment details scheduled at AllCare Doctors</p>
        
    <div class="details">
        <div class="box">
            <strong>Provider</strong>
            <p>Dr. Ann Li</p>
        </div>
        <div class="box">
            <strong>Date</strong>
            <p>Monday, September 23, 2024</p>
        </div>
        <div class="box">
            <strong>Time</strong>
            <p>10:00 AM EDT</p>
        </div>
    </div>
        
    <p>Please save these details for future reference</p>
    <a href="#" class="confirm-button">Confirm My Appointment</a>
    <p class="note">Note: If you need to cancel or reschedule your appointment please contact us at +1-800-555-1234</p>
</div>
</body>
</html>